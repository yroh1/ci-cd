node {
   def commit_id
   //We have two options, 1: to SCM from Pipeline Script from SCM, 2: Use our own declartive Github repo
   stage('checkout'){
      git branch: 'main',
          url: 'https://github.com/yroh1/ci-cd.git'
   }
   stage('step a') {
     checkout scm
     sh "git rev-parse --short HEAD > .git/commit-id"                        
     commit_id = readFile('.git/commit-id').trim()
   }
   stage('test') {
     nodejs(nodeJSInstallationName: 'nodejs') {
       dir("basics"){
        sh 'npm install --only=dev'
        sh 'npm test'
       }
     }
   }
   stage('docker build/push') {
     docker.withRegistry('https://index.docker.io/v1/', 'dockerhub1') {
       def app = docker.build("yroh1/jenkins-lab:${commit_id}", '.').push()
     }
   }
   stage('docker run') {
     sh label: '',
     script: '''
      docker run --rm -tid --name docker_test -p 3000 yroh1/jenkins-lab:latest
      docker kill docker_test
      '''
    }
}

